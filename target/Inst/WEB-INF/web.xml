<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
    <welcome-file>signin.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>posts</servlet-name>
    <servlet-class>InstagramV01.Servlet.AllPostsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>posts</servlet-name>
    <url-pattern>/posts</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>newPost</servlet-name>
    <servlet-class>InstagramV01.Servlet.AddPostServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>newPost</servlet-name>
    <url-pattern>/newPost</url-pattern>
  </servlet-mapping>

  <!-- Sign Up servlet -->
  <servlet>
    <servlet-name>signUp</servlet-name>
    <servlet-class>InstagramV01.Servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>

  <!-- Sign In servlet -->
  <servlet>
    <servlet-name>signIn</servlet-name>
    <servlet-class>InstagramV01.Servlet.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signIn</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>like</servlet-name>
    <servlet-class>InstagramV01.Servlet.LikeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>like</servlet-name>
    <url-pattern>/like</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>newFriend</servlet-name>
    <servlet-class>InstagramV01.Servlet.FriendsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>delFriend</servlet-name>
    <url-pattern>/delFriend</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>delFriend</servlet-name>
    <servlet-class>InstagramV01.Servlet.FriendsChangingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>newFriend</servlet-name>
    <url-pattern>/newFriend</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>allFriend</servlet-name>
    <url-pattern>/allFriend</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>allFriend</servlet-name>
    <servlet-class>InstagramV01.Servlet.AllFriendsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>myFollowers</servlet-name>
    <url-pattern>/myFollowers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>myFollowers</servlet-name>
    <servlet-class>InstagramV01.Servlet.AllMyFollowersServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>newComment</servlet-name>
    <servlet-class>InstagramV01.Servlet.AddCommentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>newComment</servlet-name>
    <url-pattern>/newComment</url-pattern>
  </servlet-mapping>
</web-app>

